# JWT Configuration
JWT_SECRET="your_jwt_secret_key_here"
JWT_EXPIRES_IN="1d"  # Token expiration time (e.g., 1d, 7d, 1h)
JWT_REFRESH_SECRET="your_refresh_token_secret_here"
JWT_REFRESH_EXPIRES_IN="7d"

# Password hashing
SALT_ROUNDS=10

# Session configuration
SESSION_SECRET="your_session_secret_here"
SESSION_MAX_AGE=86400  # 1 day in seconds

# ===================================
# Application Settings
# ===================================

# Environment: development, production, test
NODE_ENV="development"

# Application port
PORT=3000

# API URL (used for generating absolute URLs)
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# CORS allowed origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# ===================================
# Logging & Monitoring
# ===================================

# Log level: error, warn, info, debug, trace
LOG_LEVEL="debug"

# Enable SQL query logging (true/false)
PRISMA_LOG_QUERIES="true"

# ===================================
# Email Configuration
# ===================================

# SMTP configuration for sending emails
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_SECURE="false"  # true for 465, false for other ports
SMTP_USER="user@example.com"
SMTP_PASS="your_smtp_password"
SMTP_FROM="no-reply@yourdomain.com"

# ===================================
# External API Keys
# ===================================

# Required for authentication providers
GOOGLE_CLIENT_ID="your_google_client_id"
GOOGLE_CLIENT_SECRET="your_google_client_secret"

GITHUB_CLIENT_ID="your_github_client_id"
GITHUB_CLIENT_SECRET="your_github_client_secret"

# Optional API keys for various services
ANTHROPIC_API_KEY="your_anthropic_api_key_here"
OPENAI_API_KEY="your_openai_api_key_here"
MISTRAL_API_KEY="your_mistral_key_here"

# ===================================
# Feature Flags
# ===================================

# Enable/disable features
FEATURE_REGISTRATION="true"
FEATURE_EMAIL_VERIFICATION="true"
FEATURE_PASSWORD_RESET="true"
FEATURE_SOCIAL_LOGIN="true"