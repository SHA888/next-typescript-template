{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@workspace/shared": ["packages/shared/src/index.ts"],
      "@workspace/shared/*": ["packages/shared/src/*"]
    }
  },
  "exclude": ["node_modules"]
}
