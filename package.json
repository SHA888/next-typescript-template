{
  "name": "next-typescript-template",
  "version": "0.1.0",
  "description": "Next TypeScript Template",
  "author": "Kresna Sucandra",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/database"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo clean && rm -rf node_modules",
    "db:studio": "cd packages/database && pnpm prisma:studio",
    "db:push": "cd packages/database && pnpm prisma:migrate",
    "db:generate": "cd packages/database && pnpm prisma:generate"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.1.0",
    "prettier": "^3.2.4",
    "turbo": "^1.12.5",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.10.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "prisma": {
    "schema": "packages/database/prisma/schema.prisma"
  },
  "dependencies": {
    "tsup": "^8.0.0"
  }
}
